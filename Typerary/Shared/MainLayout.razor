@inherits LayoutComponentBase

<main>
    <div class="fixed-top" style="display: flex; justify-content: space-between; align-items: center; padding: 0.5rem 1rem; background-color: snow;">
        <div style="font-weight: bold; font-size: 1.2rem;">
            <RadzenLink Path="/" Text="Typerary" class="navbar-brand rz-ripple rz-color-danger-darker" style="text-decoration: none"/>
        </div>
        
        <RadzenMenu class="mr-auto" Style="background-color: snow">
            <RadzenMenuItem Text="About" Path="/typerary/about" Icon="info"></RadzenMenuItem>
            <RadzenMenuItem Text="History" Path="/typerary/history" Icon="update"></RadzenMenuItem>
            <RadzenMenuItem Text="Works" Path="/typerary/works" Icon="book"></RadzenMenuItem>
        </RadzenMenu>
    </div>

    @Body

    <footer class="footer border-0" style="background-color: rgba(255, 255, 255, 0)">
        <div class="container-fluid m-5">
            <RadzenText TextStyle="TextStyle.Body1" class="rz-color-white cormonant">Copyright (C) @DateTime.Now.Year WhiteFox-Lugh</RadzenText>
        </div>
    </footer>
</main>