@page "/"
@using Radzen

<PageTitle>Typerary - Home</PageTitle>

<Animate Animation="Animations.FadeIn" Duration="TimeSpan.FromSeconds(1)">
    <div class="container-fluid m-5">
        <div class="row">
            <div class="col col-lg-5">
                <article class="content text-center p-5 body-index-bg-alpha rz-border-radius-8">

                    <RadzenText TextStyle="TextStyle.DisplayH1" TagName="TagName.H1" class="p-3 index-text-shadow welcome-heading head-underline">Typerary</RadzenText>

                    <RadzenText TextStyle="TextStyle.H5" TagName="TagName.H5" class="p-3 index-text-shadow">タイピングで味わう文学作品の世界</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1" class="p-1" Style="font-size: medium; font-weight: bold">ようこそ、Typerary （タイプラリー）へ。</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1" class="p-1" Style="font-size: medium; font-weight: bold">本図書館では、文学作品をタイピング練習することができます。</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1" class="p-1" Style="font-size: medium; font-weight: bold">ごゆっくりお愉しみくださいませ。</RadzenText>
                </article>
            </div>
            <div class="col col-lg-6"></div>
        </div>
    </div>
</Animate>