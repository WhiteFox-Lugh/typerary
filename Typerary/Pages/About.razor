#if DEBUG
@page "/typerary/about"
#else
@page "/about"
#endif

@using System.Text
@inject HttpClient Http

<PageTitle>Typerary - About</PageTitle>

<Animate Animation="Animations.FadeIn" Duration="TimeSpan.FromSeconds(0.5)">
    <article class="content p-3 m-4 rz-shadow-8 rz-border-radius-3 align-items-center text-center body-about-bg-alpha">

        <RadzenText TextStyle="TextStyle.DisplayH3" TagName="TagName.H3" class="mb-5 article-heading" data-en="About">Typerary について</RadzenText>

        <RadzenText TextStyle="TextStyle.H5" TagName="TagName.H5" class="my-5">Typerary は、文学作品をタイピング練習できるサービスです。</RadzenText>

        <RadzenText TextStyle="TextStyle.DisplayH4" TagName="TagName.H4" class="my-2 head-underline">特徴</RadzenText>

        <div class="container my-5 text-center">
            <RadzenImage Path="./img/about_img_1.jpg"
                         Class="rz-border-radius-5 mb-4"
                         Style="max-width: 100%; height: auto;"/>

            <div class="text-left px-3 px-md-5">
                <RadzenText TextStyle="TextStyle.DisplayH6" TagName="TagName.H6" class="mb-3 head-left-line">
                    実際の文章入力に近い形式のタイピング練習
                </RadzenText>
                <RadzenText TextStyle="TextStyle.Body1">
                    実際の文章入力に近い形式で練習ができるように設計をしてあります。
                    長文の入力に特化した練習を行い、正確に速く文章を入力するスキルを磨くことができます。
                </RadzenText>
            </div>
        </div>

        <div class="container my-5 text-center">
            <RadzenImage Path="./img/about_img_2.jpg"
                         Class="rz-border-radius-5 mb-4"
                         Style="max-width: 100%; height: auto;"/>

            <div class="text-left px-3 px-md-5">
                <RadzenText TextStyle="TextStyle.DisplayH6" TagName="TagName.H6" class="mb-3 head-left-line">
                    文学作品に触れられる
                </RadzenText>
                <RadzenText TextStyle="TextStyle.Body1">
                    文学作品を通して、現代にも通じる思想を学んだり、人々が抱く感情に触れたり、洗練された文体、表現、語彙を味わったりすることができます。
                </RadzenText>
            </div>
        </div>

        <div class="d-flex flex-row mt-5 px-5">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg">
                        <RadzenText TextStyle="TextStyle.H4" TagName="TagName.H4" class="mb-5 head-underline">利用について</RadzenText>

                        <div class="text-left">
                            <RadzenText TextStyle="TextStyle.Body1">
                                本サイトは PC での利用推奨です。
                            </RadzenText>
                            <RadzenText TextStyle="TextStyle.Body1">
                                スマートフォンやタブレットといったモバイル端末での利用は、
                                動作やレイアウトの品質を保証しておりません（今後対応する可能性はあります）。
                            </RadzenText>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex flex-row mt-5 px-5">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg">
                        <RadzenText TextStyle="TextStyle.H4" TagName="TagName.H4" class="mb-5 head-underline">利用規約</RadzenText>

                        <div class="text-left">
                            @((MarkupString)Markdown.ToHtml(_tos.ToString()))
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="px-5">
            <div class="container-fluid">
                <div class="row">
                    <RadzenText TextStyle="TextStyle.H4" TagName="TagName.H4" class="my-5 head-underline">お借りしたもの</RadzenText>
                    <RadzenCard class="w-100 rz-border-radius-4 rz-shadow-3">
                        <div class="d-flex flex-row">
                            <div class="container-fluid">
                                <div class="row">
                                    <div class="col-lg">
                                        <div class="card-header rz-background-color-warning-lighter">
                                            <RadzenText TextStyle="TextStyle.H5">文章</RadzenText>
                                        </div>
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item">
                                                <RadzenLink Path="https://www.aozora.gr.jp/" Text="青空文庫"/>
                                            </li>
                                            <li class="list-group-item">
                                                <RadzenLink Path="https://www.gutenberg.org/" Text="Project Gutenberg"/>
                                            </li>
                                        </ul>
                                    </div>
                                    <div class="col-lg">
                                        <div class="card-header rz-background-color-warning-lighter">
                                            <RadzenText TextStyle="TextStyle.H5">画像</RadzenText>
                                        </div>
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item">
                                                <RadzenLink Path="https://unsplash.com/ja/%E5%86%99%E7%9C%9F/1ZO0QLfGe0g?utm_source=unsplash&utm_medium=referral&utm_content=creditShareLink" Text="背景画像"/>
                                            </li>
                                            <li class="list-group-item">
                                                <RadzenLink Path="https://unsplash.com/ja/%E5%86%99%E7%9C%9F/yFbyvpEGHFQ?utm_source=unsplash&utm_medium=referral&utm_content=creditShareLink" Text="挿入画像（タイピング）"/>
                                            </li>
                                            <li class="list-group-item">
                                                <RadzenLink Path="https://unsplash.com/ja/%E5%86%99%E7%9C%9F/726BIW8ArvM?utm_source=unsplash&utm_medium=referral&utm_content=creditShareLink" Text="挿入画像（本）"/>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </RadzenCard>
                </div>
            </div>
        </div>

        <div class="px-5">
            <div class="container-fluid">
                <RadzenText TextStyle="TextStyle.H4" TagName="TagName.H4" class="my-5 head-underline">
                    開発者
                </RadzenText>

                <RadzenCard class="py-5 px-3 w-100 rz-border-radius-4 rz-shadow-3 text-left">
                    <div class="mx-4 text-center">
                        <RadzenImage Path="./img/fursona.jpg"
                                     Class="rounded-circle mb-4 mx-auto d-block"
                                     Style="max-width: 100%; width: 150px; height: auto;" />

                        <div class="text-left">
                            <RadzenText TextStyle="TextStyle.Overline" Class="mt-1">
                                司書 / Librarian
                            </RadzenText>
                            <RadzenText TextStyle="TextStyle.Body1">
                                <b>ハク（白狐）</b>
                            </RadzenText>
                            <div class="mt-3">
                                狐の獣人。昼寝とおいしい食べ物を食べることが好き。
                            </div>
                        </div>
                    </div>
                </RadzenCard>
            </div>
        </div>

    </article>
</Animate>

@code {
    private const string DefaultString = "Something went wrong. Please reload this page.";
    private StringBuilder _tos = new();

    protected override async Task OnInitializedAsync()
    {
        var tosData = await Http.GetAsync("./misc/tos.md");
        if (tosData.StatusCode != System.Net.HttpStatusCode.OK)
        {
            _tos.Append(DefaultString);
            return;
        }

        _tos.Append(await tosData.Content.ReadAsStringAsync());
    }

}